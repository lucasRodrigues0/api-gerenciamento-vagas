            }
        },
        "/api/user/id/{userId}": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Get user",
                "description": "Retorna um usuário com base no id passado como parâmetro na URL",
                "parameters": [
                    {
                        "in": "path",
                        "name": "userId",
                        "type": "integer",
                        "required": true,
                        "description": "User Id"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "admin": {
                                        "value": {
                                            "id": 0,
                                            "name": "admin",
                                            "email": "test@email.com",
                                            "type": "admin"
                                        }
                                    },
                                    "candidate": {
                                        "value": {
                                            "id": 0,
                                            "name": "candidate",
                                            "email": "candidate@email.com",
                                            "type": "candidate",
                                            "_skills": [
                                                "CSS",
                                                "Javascript"
                                            ],
                                            "applications": []
                                        }
                                    },
                                    "recruiter": {
                                        "value": {
                                            "id": 0,
                                            "name": "recruiter",
                                            "email": "recruiter@email.com",
                                            "type": "recruiter",
                                            "jobs": []
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "Unauthorized": {
                                        "value": {
                                            "status": 401,
                                            "message": "Unauthorized"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "User not found": {
                                        "value": {
                                            "status": 404,
                                            "message": "User not found"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/user/skill/add": {
            "patch": {
                "tags": [
                    "User"
                ],
                "summary": "Adicionar habilidade",
                "description": "Rota responsável por adicionar habilidades a um usuário do tipo candidato",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/addSkillBody"
                            },
                            "example": {
                                "skillId": 0
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "value": {
                                            "message": "success"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "Unauthenticated": {
                                        "value": {
                                            "status": 401,
                                            "message": "Unauthorized"
                                        }
                                    },
                                    "Unauthorized": {
                                        "value": {
                                            "status": 401,
                                            "message": "User not allowed for this operation"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "User not found": {
                                        "value": {
                                            "status": 404,
                                            "message": "User not found"
                                        }
                                    },
                                    "Skill not found": {
                                        "value": {
                                            "status": 404,
                                            "message": "Skill not found"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }        
    },
    "components": {
            "schemas": {
                "RegisterBody": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "email": {
                            "type": "string"
                        },
                        "password": {
                            "type": "string"
                        },
                        "confPassword": {
                            "type": "string"
                        },
                        "type": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "name",
                        "email",
                        "password",
                        "confPassword",
                        "type"
                    ]
                },
                "LoginBody": {
                    "type": "object",
                    "properties": {
                        "email": {
                            "type": "string"
                        },
                        "password": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "email",
                        "password"
                    ]
                },
                "addSkillBody": {
                    "type": "object",
                    "properties": {
                        "skillId": {
                            "type": "integer"
                        }
                    },
                    "required": [
                        "skillId"
                    ]
                }
            }
        }
}